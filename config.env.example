# Source Database Configuration (where sensor data comes from)
SOURCE_DB_HOST=localhost
SOURCE_DB_USER=user
SOURCE_DB_PASSWORD=pass
SOURCE_DB_NAME=sensor_db
SOURCE_DB_PORT=3306

# API Database Configuration (where predictions are stored)
API_DB_HOST=localhost
API_DB_USER=user
API_DB_PASSWORD=pass
API_DB_NAME=api_db
API_DB_PORT=3306

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Environment Configuration
ENVIRONMENT=development
# CORS_ORIGINS=https://weather.fredesk.com,http://weather.fredesk.com

# Model Configuration
MODEL_PATH=model.pth
METRICS_PATH=metrics.json
PREDICTION_INTERVAL_MINUTES=60

# Logging Configuration
LOGGING_ENABLED=true
LOG_LEVEL=info
LOG_VERBOSE=false

# Data Export Configuration
EXPORT_BATCH_SIZE=1000 